<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.deutchall.activities"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.deutchall.activities.DeutschChallenge"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name" 
        android:theme="@android:style/Theme.Holo.NoActionBar">
        <activity
            android:name="com.deutchall.activities.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
 
        <activity
            android:name="com.deutchall.activities.UserActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity
            android:name="com.deutchall.activities.RegisterActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity
            android:name="com.deutchall.activities.SelectGameActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity
            android:name="com.deutchall.activities.GameActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity
            android:name="com.deutchall.activities.RankingActivity"
            android:configChanges="keyboardHidden|orientation" />
    </application>
</manifest>
